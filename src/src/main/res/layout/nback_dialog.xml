<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/nbacktitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a card"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:textColor="@android:color/holo_orange_dark" />
    <TextView
        android:id="@+id/nbacktext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a card you picked n turns ago"
        android:textSize="20sp"
        android:layout_below="@+id/nbacktitle"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nbacktext"
        android:id="@+id/radiogroup">

        <RadioButton
            android:id="@+id/rd_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="A" />

        <RadioButton
            android:id="@+id/rd_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rd_1"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="B" />

        <RadioButton
            android:id="@+id/rd_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rd_2"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="C" />
    </RadioGroup>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogroup"
        android:layout_centerInParent="true"
        android:id="@+id/dialogbutton"
        android:text="OK" />


</RelativeLayout>