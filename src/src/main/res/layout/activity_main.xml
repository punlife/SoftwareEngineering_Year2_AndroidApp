<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height ="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_blue_dark">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/help_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/button_help"/>
        <ImageView
            android:id="@+id/settings_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/button_settings"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">
        <Button
            android:id="@+id/contactUs_button"
            android:layout_width="150dp"
            android:layout_height="82dp"
            android:layout_marginRight="40dp"
            android:text="Contact-Us"
            android:textSize="16dp"
            android:drawableLeft="@drawable/button_contactus"/>

        <Button
            android:id="@+id/play_button"
            android:layout_width="150dp"
            android:layout_height="82dp"
            android:text="Play"
            android:textSize="18dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/button_play"/>
        <Button
            android:id="@+id/highScore_button"
            android:layout_width="150dp"
            android:layout_height="82dp"
            android:text="High-Score"
            android:textSize="18dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/button_highscore"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
