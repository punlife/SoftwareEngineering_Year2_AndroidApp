<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mutedRed</item>
        <item name="colorPrimaryDark">@color/mutedRedDark</item>
        <item name="colorAccent">@color/mutedBlueDark</item>
        <item name="android:statusBarColor">?android:attr/colorForeground</item>
        <item name="android:colorBackground">@android:color/background_light</item>
    </style>

    <style name="AppTheme.CustomPopupTheme" >
        <item name ="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>
